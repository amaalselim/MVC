@model languages.ViewModel.LogIn

@{
    ViewData["Title"] = "login";
}


    <hr />
<section class="text-center text-lg-start">
    <style>
        .cascading-right {
            margin-right: -50px;
        }
    </style>
    <div class="container py-4 rounded-3">
        <div class="row g-0 align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <div class="d-flex justify-content-center">
                    <!-- Centering div added -->
                    <div class="card cascading-right" style="background: hsla(0, 0%, 100%, 0.55);backdrop-filter: blur(30px);">
                        <div class="card-body p-5 shadow-5 text-center">
                            <h2 class="fw-bold mb-5">Log In</h2>
                            <form asp-action="login" method="post">
                                <!-- Input fields -->
                                <div data-mdb-input-init class="form-outline  mb-4">
                                    <label asp-for="Name" class="form-label" for="form3Example1">Name</label>
                                    <input asp-for="Name" type="text" id="form3Example1" class="form-control" />
                                    
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                              
                                <div data-mdb-input-init class="form-outline mb-4">
                                    <label asp-for="Password" class="form-label" for="form3Example4">Password</label>
                                    <input asp-for="Password" type="password" id="form3Example4" class="form-control" />
                                    
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                                </label>
                            </div>
                                
                                <!-- Submit button -->
                                <button type="submit" value="login" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block mb-4" style="color:white">
                                    lOGIN                             
                                 </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



