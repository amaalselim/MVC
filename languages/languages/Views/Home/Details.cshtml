@model SkinCareProduct

@{
    ViewBag.Title = "Skin Care Products Details";
}
<div class="text-center">
    <h1 class="display-4">ZYNAH</h1>
</div>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <!-- Adjust the column width to make the product details larger -->
            <div class="card mb-3">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <!-- Column for the image -->
                        <div class="image-container">
                            <img src="~/img/@Model.Image" alt="Product Image" class="card-img" style="height: 100%; object-fit: cover;">
                        </div>
                    </div>
                    <div class="col-md-8">
                        <!-- Column for the product details -->
                        
                        <div class="card-body">
                            <center>
                        <div class="info-container">
                                <h2 class="card-title">@Model.Name</h2>
                                 <p class="card-text font-weight-bold">@Model.Description</p>
                        </div>
                            </center>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
