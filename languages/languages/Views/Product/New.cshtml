@model languages.Models.SkinCareProduct

@{
    ViewData["Title"] = "New";
}
<div class="text-center">
    <h1 class="display-4">ZYNAH</h1>
</div>
<br />

<div class="container">
    <form asp-action="New" method="post">
        <div class="mb-3">
            <label for="Name" class="form-label">Name:</label>
            <input type="text" asp-for="Name" class="form-control" id="Name" />
        </div>
        <div class="mb-3">
            <label for="Image" class="form-label">Image:</label>
            <input type="file" asp-for="Image" class="form-control" id="Image" />
        </div>
        <div class="mb-3">
            <label for="Description" class="form-label">Description:</label>
            <input type="text" asp-for="Description" class="form-control" id="Description" />

        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
